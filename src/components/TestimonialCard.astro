---
import type { Testimonial } from '../data/testimonials';

interface Props {
  testimonial: Testimonial;
}

const { testimonial } = Astro.props;
---

<article class="card-hover h-full flex flex-col">
  <!-- Header avec étoiles -->
  <div class="flex items-center justify-between mb-4">
    <div class="flex gap-1">
      {Array.from({ length: 5 }).map((_, i) => (
        <svg 
          class={`w-5 h-5 ${i < testimonial.rating ? 'text-solar-400' : 'text-dark-200'}`} 
          fill="currentColor" 
          viewBox="0 0 20 20"
        >
          <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
        </svg>
      ))}
    </div>
    <span class="text-xs text-dark-400">{testimonial.date}</span>
  </div>
  
  <!-- Citation -->
  <blockquote class="flex-grow mb-6">
    <p class="text-dark-700 leading-relaxed italic">
      "{testimonial.quote}"
    </p>
  </blockquote>
  
  <!-- Résultats -->
  <div class="grid grid-cols-3 gap-2 mb-6 p-4 bg-primary-50 rounded-xl">
    {testimonial.results.map((result) => (
      <div class="text-center">
        <span class="block text-xs text-dark-500 mb-1">{result.label}</span>
        <span class="block text-sm font-bold text-primary-700">{result.value}</span>
      </div>
    ))}
  </div>
  
  <!-- Footer -->
  <div class="flex items-center gap-4 pt-4 border-t border-dark-100">
    <!-- Avatar placeholder -->
    <div class="w-12 h-12 rounded-full bg-gradient-to-br from-primary-100 to-primary-200 flex items-center justify-center">
      <span class="text-lg font-bold text-primary-600">
        {testimonial.name.charAt(0)}
      </span>
    </div>
    <div>
      <p class="font-semibold text-dark-900">{testimonial.name}</p>
      <p class="text-sm text-dark-500">{testimonial.location}</p>
      <p class="text-xs text-primary-600">{testimonial.installation}</p>
    </div>
  </div>
</article>
