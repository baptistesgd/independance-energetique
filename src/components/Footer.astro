---
const currentYear = new Date().getFullYear();

const footerLinks = {
  solutions: [
    { label: 'Panneaux Solaires', href: '/#panneaux-solaires' },
    { label: 'Batteries de Stockage', href: '/#batteries-stockage' },
    { label: 'Bornes de Recharge', href: '/#bornes-recharge' },
    { label: 'Éolien Domestique', href: '/#eolien-domestique' },
  ],
  ressources: [
    { label: 'Blog & Guides', href: '/blog' },
    { label: 'Simulateur d\'économies', href: '/#simulateur' },
    { label: 'FAQ', href: '/#faq' },
    { label: 'Aides & Subventions', href: '/blog?category=aides-financieres' },
  ],
  legal: [
    { label: 'Mentions Légales', href: '/mentions-legales' },
    { label: 'Politique de Confidentialité', href: '/politique-confidentialite' },
    { label: 'CGU', href: '/mentions-legales#cgu' },
  ],
};

const trustBadges = [
  { label: 'RGE Qualifié', icon: '✓' },
  { label: 'QualiPV', icon: '✓' },
  { label: 'Garantie Décennale', icon: '✓' },
];
---

<footer class="bg-dark-900 text-dark-300">
  <!-- Section principale -->
  <div class="container-custom py-12 md:py-16">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 lg:gap-12">
      <!-- Brand -->
      <div class="lg:col-span-1">
        <a href="/" class="flex items-center gap-3 mb-6">
          <div class="w-12 h-12 bg-gradient-to-br from-primary-500 to-primary-700 rounded-xl flex items-center justify-center">
            <svg class="w-7 h-7 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z" />
            </svg>
          </div>
          <div>
            <span class="block text-xl font-display font-bold text-white">
              Pôle Énergie
            </span>
            <span class="block text-sm text-primary-400 font-medium -mt-0.5">
              & Autonomie
            </span>
          </div>
        </a>
        <p class="text-dark-400 text-sm leading-relaxed mb-6">
          Votre partenaire pour l'indépendance énergétique. Solutions solaires, stockage et mobilité électrique pour particuliers et professionnels.
        </p>
        <!-- Trust badges -->
        <div class="flex flex-wrap gap-2">
          {trustBadges.map((badge) => (
            <span class="inline-flex items-center gap-1.5 px-3 py-1.5 bg-dark-800 rounded-lg text-xs font-medium text-primary-400">
              <span class="text-primary-500">{badge.icon}</span>
              {badge.label}
            </span>
          ))}
        </div>
      </div>
      
      <!-- Solutions -->
      <div>
        <h3 class="text-white font-semibold text-sm uppercase tracking-wider mb-4">
          Nos Solutions
        </h3>
        <ul class="space-y-3">
          {footerLinks.solutions.map((link) => (
            <li>
              <a href={link.href} class="text-dark-400 hover:text-primary-400 transition-colors text-sm">
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>
      
      <!-- Ressources -->
      <div>
        <h3 class="text-white font-semibold text-sm uppercase tracking-wider mb-4">
          Ressources
        </h3>
        <ul class="space-y-3">
          {footerLinks.ressources.map((link) => (
            <li>
              <a href={link.href} class="text-dark-400 hover:text-primary-400 transition-colors text-sm">
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>
      
      <!-- Contact & Newsletter -->
      <div>
        <h3 class="text-white font-semibold text-sm uppercase tracking-wider mb-4">
          Contact
        </h3>
        <ul class="space-y-3 mb-6">
          <li class="flex items-start gap-3">
            <svg class="w-5 h-5 text-primary-500 mt-0.5 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
            </svg>
            <span class="text-dark-400 text-sm">
              <a href="tel:+33XXXXXXXXX" class="hover:text-primary-400 transition-colors">
                0X XX XX XX XX
              </a>
              <br />
              <span class="text-xs text-dark-500">Lun-Ven 9h-18h</span>
            </span>
          </li>
          <li class="flex items-start gap-3">
            <svg class="w-5 h-5 text-primary-500 mt-0.5 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
            <a href="mailto:contact@pole-energie-autonomie.fr" class="text-dark-400 hover:text-primary-400 transition-colors text-sm">
              contact@pole-energie-autonomie.fr
            </a>
          </li>
        </ul>
        
        <!-- Sources officielles -->
        <div class="pt-4 border-t border-dark-800">
          <p class="text-xs text-dark-500 mb-2">Sources de nos données :</p>
          <div class="flex flex-wrap gap-2">
            <a href="https://www.ademe.fr" target="_blank" rel="noopener" class="text-xs text-dark-500 hover:text-primary-400 transition-colors">
              ADEME
            </a>
            <span class="text-dark-700">•</span>
            <a href="https://www.ecologie.gouv.fr" target="_blank" rel="noopener" class="text-xs text-dark-500 hover:text-primary-400 transition-colors">
              ecologie.gouv.fr
            </a>
            <span class="text-dark-700">•</span>
            <a href="https://www.photovoltaique.info" target="_blank" rel="noopener" class="text-xs text-dark-500 hover:text-primary-400 transition-colors">
              photovoltaique.info
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
  
  <!-- Bottom bar -->
  <div class="border-t border-dark-800">
    <div class="container-custom py-6 flex flex-col md:flex-row items-center justify-between gap-4">
      <p class="text-dark-500 text-sm text-center md:text-left">
        © {currentYear} Pôle Énergie & Autonomie. Tous droits réservés.
      </p>
      <div class="flex items-center gap-6">
        {footerLinks.legal.map((link) => (
          <a href={link.href} class="text-dark-500 hover:text-dark-300 transition-colors text-sm">
            {link.label}
          </a>
        ))}
      </div>
    </div>
  </div>
</footer>
